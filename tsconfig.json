{
  "compilerOptions": {
     "target": "es2016",
     "typeRoots": ["./types", "./node_modules/@types"],
     "module": "commonjs",
     "outDir": "./",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "skipLibCheck": true,
     "paths": {
        "root/*": [
           "./*"
        ]
     }
  },
  "include": [
     "types.ts",
     "**/*.ts"
  ],
  "exclude": [
     "node_modules",
     "tests"
  ],
  "typesRoots": [
     "node_modules/@types",
     "./types"
  ],
  "types": [
     "node"
  ]
}